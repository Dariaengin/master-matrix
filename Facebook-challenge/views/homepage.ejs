<% feed.forEach(feed => { %>
  <li>
    <h3><a href="/feed/<%= feed._id %>" class=""><%= feed.title %></a></h3>
    <p>
      <% if (feed.content && feed.content.length > 30) { %>
        <%= feed.content.slice(0, 30) + '...' %>
        <a href="/feed/<%= feed._id %>">See more</a>
      <% } else { %>
        <%= feed.content %>
      <% } %>
    </p>
  </li>
<% }) %>


</body>
</html>
