
<h6 class="fs-5 text-body-secondary ms-4 mb-3">Comments</h6>
<form action="/post/add/new-comment/<%= post._id %>" method="POST" class="ms-4">
  <div class="input-group mb-3">
    <input
      type="text"
      name="comment"
      id="comment"
      class="form-control"
      placeholder="Comment..."
      aria-label="Comment"
      aria-describedby="button-addon2"
    />
    <button class="btn btn-outline-secondary" id="button-addon2">
      Add comment
    </button>
  </div>
</form>
<div class="d-flex flex-column justify-content-center ms-4 mb-5">
  <% if(errCommentLength){%>
  <p class="text-danger"><%= errCommentLength %></p>
  <% } %>
</div>
<div class="d-flex flex-column justify-content-center mb-5">
  <% if(post.comments.length >0) { %> <% post.comments.forEach(comment=>{ %>
  <div
    class="d-flex flex-row justify-content-between ms-5 mb-3 bg-body-secondary rounded p-2"
  >
    <p class="ms-4 me-4"><%= comment.comment %></p>
    <form
      action="/delete/post/comment/<%= comment._id %>/<%= post._id %>"
      method="POST"
    >
      <button class="btn btn-danger align-self-center">Delete</button>
    </form>
  </div>
  <% }) %> <% } %>
</div>
